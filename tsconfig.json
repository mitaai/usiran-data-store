{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "rootDir": ".",
    "noEmit": true,
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "./typegen.d.ts",
    "./src"
  ],
}